<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/BerandaFragment">

    <fragment
        android:id="@+id/BerandaFragment"
        android:name="com.example.iotkebakaran.ui.beranda.BerandaFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_beranda" >
        <action
            android:id="@+id/action_BerandaFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>

    <fragment
        android:id="@+id/RiwayatFragment"
        android:name="com.example.iotkebakaran.ui.riwayat.RiwayatFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_riwayat" >
        <action
            android:id="@+id/action_RiwayatFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.iotkebakaran.ui.info.InfoFragment"
        android:label="InfoFragment" />

</navigation>